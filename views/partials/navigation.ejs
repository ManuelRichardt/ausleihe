<nav class="navigation" aria-label="Hauptnavigation">
  <% const menu = navigation || []; %>
  <% const renderItems = function(items) { %>
    <ul class="navigation__list">
      <% items.forEach(function(item) { %>
        <li class="navigation__item <%= item.active ? 'is-active' : '' %> <%= item.open ? 'is-open' : '' %>">
          <a href="<%= item.route %>" aria-label="<%= item.label %>">
            <span class="navigation__label"><%= item.label %></span>
          </a>
          <% if (item.children && item.children.length) { %>
            <div class="navigation__children">
              <%- renderItems(item.children) %>
            </div>
          <% } %>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <% if (menu.length) { %>
    <%- renderItems(menu) %>
  <% } else { %>
    <ul class="navigation__list">
      <li class="navigation__item"><a href="/">Home</a></li>
      <li class="navigation__item"><a href="/login">Login</a></li>
    </ul>
  <% } %>
</nav>
