<% pageTitle = 'Ausleihdokument' %>
<%
  const safeLoan = (typeof loan !== 'undefined' && loan) ? loan : { id: '' };
  const safeLoanBasePath = (typeof loanBasePath !== 'undefined' && loanBasePath) ? loanBasePath : '/loans/' + safeLoan.id;
%>
<section>
  <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-4">
    <div>
      <h1 class="h3 mb-1">Ausleihdokument</h1>
      <p class="text-muted mb-0">ID: <%= safeLoan.id %></p>
    </div>
    <div class="d-flex gap-2">
      <a class="btn btn-outline-secondary" href="<%= safeLoanBasePath %>">Zurück</a>
      <a class="btn btn-primary" href="/loans/<%= safeLoan.id %>/print?format=pdf">PDF herunterladen</a>
    </div>
  </div>

  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <dl class="row mb-0">
        <dt class="col-sm-3 text-muted">Status</dt>
        <dd class="col-sm-9"><%= safeLoan.status || '-' %></dd>
        <dt class="col-sm-3 text-muted">Reserviert von</dt>
        <dd class="col-sm-9"><%= safeLoan.reservedFrom || '-' %></dd>
        <dt class="col-sm-3 text-muted">Reserviert bis</dt>
        <dd class="col-sm-9"><%= safeLoan.reservedUntil || '-' %></dd>
      </dl>
    </div>
  </div>

  <div class="card shadow-sm mb-4">
    <div class="card-header bg-white">
      <h2 class="h6 mb-0">Assets</h2>
    </div>
    <div class="card-body p-0">
      <% if (!safeLoan.loanItems || safeLoan.loanItems.length === 0) { %>
        <div class="p-3 text-muted">Keine Assets vorhanden.</div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th>Inventar</th>
                <th>Modell</th>
                <th>Hersteller</th>
                <th>Status</th>
                <th>Zustand</th>
              </tr>
            </thead>
            <tbody>
              <% safeLoan.loanItems.forEach(function (item) { %>
                <tr>
                  <td><%= item.asset ? item.asset.inventoryNumber : item.assetId %></td>
                  <td><%= item.asset && item.asset.model ? item.asset.model.name : '-' %></td>
                  <td><%= item.asset && item.asset.model && item.asset.model.manufacturer ? item.asset.model.manufacturer.name : '-' %></td>
                  <td><%= item.status %></td>
                  <td><%= item.conditionOnReturn || item.conditionOnHandover || '-' %></td>
                </tr>
                <% if (item.asset && customFieldsByAsset && customFieldsByAsset[item.asset.id] && customFieldsByAsset[item.asset.id].length) { %>
                  <tr>
                    <td colspan="5">
                      <div class="small">
                        <% customFieldsByAsset[item.asset.id].forEach(function (field) { %>
                          <div><strong><%= field.label %>:</strong> <%= field.value || '-' %></div>
                        <% }) %>
                      </div>
                    </td>
                  </tr>
                <% } %>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-header bg-white">
      <h2 class="h6 mb-0">Signaturen</h2>
    </div>
    <div class="card-body">
      <% if (!safeLoan.loanSignatures || safeLoan.loanSignatures.length === 0) { %>
        <div class="text-muted">Keine Signaturen vorhanden.</div>
      <% } else { %>
        <ul class="list-group list-group-flush">
          <% safeLoan.loanSignatures.forEach(function (sig) { %>
            <li class="list-group-item px-0"><strong><%= sig.signatureType %></strong> – <%= sig.signedByName %> (<%= sig.signedAt %>)</li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </div>
</section>
