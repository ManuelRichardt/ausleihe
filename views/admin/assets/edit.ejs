<% pageTitle = 'Asset bearbeiten' %>
<%
  const safeFormData = (typeof formData !== 'undefined' && formData) ? formData : null;
  const safeAsset = (typeof asset !== 'undefined' && asset) ? asset : {};
  const values = (safeFormData && Object.keys(safeFormData).length) ? safeFormData : safeAsset;
  const safeErrors = (typeof errors !== 'undefined' && errors) ? errors : null;
  const errorsList = Array.isArray(safeErrors) ? safeErrors : [];
  const errorsMap = (!Array.isArray(safeErrors) && safeErrors) ? safeErrors : {};
  const errorFor = function (field) {
    if (errorsMap && errorsMap[field]) {
      return errorsMap[field];
    }
    const match = errorsList.find(function (err) { return err.field === field; });
    return match ? match.message : '';
  };
  const modelOptions = Array.isArray(models) ? models : [];
  const conditionValue = values.condition || 'good';
%>

<section class="admin assets">
  <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-4">
    <div>
      <h1 class="h3 mb-1">Asset bearbeiten</h1>
      <p class="text-muted mb-0"><%= safeAsset.inventoryNumber || '' %></p>
    </div>
    <div class="d-flex gap-2">
      <a href="/admin/assets/<%= safeAsset.id %>" class="btn btn-outline-secondary">Zurück</a>
    </div>
  </div>

  <form method="post" action="/admin/assets/<%= safeAsset.id %>" class="card shadow-sm">
    <input type="hidden" name="csrfToken" value="<%= csrfToken || '' %>">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <label for="assetModelId" class="form-label">Modell</label>
          <select id="assetModelId" name="assetModelId" class="form-select <%= errorFor('assetModelId') ? 'is-invalid' : '' %>">
            <option value="">Bitte wählen</option>
            <% modelOptions.forEach(function(m) { %>
              <option value="<%= m.id %>" <%= values.assetModelId === m.id ? 'selected' : '' %>><%= m.name %></option>
            <% }) %>
          </select>
          <% if (errorFor('assetModelId')) { %><div class="invalid-feedback"><%= errorFor('assetModelId') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="inventoryNumber" class="form-label">Inventarnummer</label>
          <input type="text" class="form-control <%= errorFor('inventoryNumber') ? 'is-invalid' : '' %>" id="inventoryNumber" name="inventoryNumber" value="<%= values.inventoryNumber || '' %>">
          <% if (errorFor('inventoryNumber')) { %><div class="invalid-feedback"><%= errorFor('inventoryNumber') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="serialNumber" class="form-label">Seriennummer</label>
          <input type="text" class="form-control <%= errorFor('serialNumber') ? 'is-invalid' : '' %>" id="serialNumber" name="serialNumber" value="<%= values.serialNumber || '' %>">
          <% if (errorFor('serialNumber')) { %><div class="invalid-feedback"><%= errorFor('serialNumber') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="condition" class="form-label">Zustand</label>
          <select id="condition" name="condition" class="form-select">
            <% ['new', 'good', 'fair', 'damaged', 'lost'].forEach(function(cond) { %>
              <option value="<%= cond %>" <%= conditionValue === cond ? 'selected' : '' %>><%= cond %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-6">
          <label for="isActive" class="form-label">Ausleihbar</label>
          <select id="isActive" name="isActive" class="form-select">
            <option value="true" <%= (values.isActive === false || values.isActive === 'false') ? '' : 'selected' %>>Ja</option>
            <option value="false" <%= (values.isActive === false || values.isActive === 'false') ? 'selected' : '' %>>Nein</option>
          </select>
        </div>
      </div>
    </div>
    <div class="card-footer d-flex flex-wrap gap-2 justify-content-end">
      <button type="submit" class="btn btn-primary">Speichern</button>
      <a href="/admin/assets/<%= safeAsset.id %>" class="btn btn-outline-secondary">Abbrechen</a>
    </div>
  </form>
</section>
