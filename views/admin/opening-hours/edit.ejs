<% pageTitle = 'Öffnungszeit bearbeiten' %>
<%
  const safeFormData = (typeof formData !== 'undefined' && formData) ? formData : null;
  const safeHour = (typeof hour !== 'undefined' && hour) ? hour : {};
  const values = (safeFormData && Object.keys(safeFormData).length) ? safeFormData : safeHour;
  const safeErrors = (typeof errors !== 'undefined' && errors) ? errors : null;
  const errorsList = Array.isArray(safeErrors) ? safeErrors : [];
  const errorsMap = (!Array.isArray(safeErrors) && safeErrors) ? safeErrors : {};
  const errorFor = function (field) {
    if (errorsMap && errorsMap[field]) {
      return errorsMap[field];
    }
    const match = errorsList.find(function (err) { return err.field === field; });
    return match ? match.message : '';
  };
  const dayLabels = {
    mon: 'Montag',
    tue: 'Dienstag',
    wed: 'Mittwoch',
    thu: 'Donnerstag',
    fri: 'Freitag',
    sat: 'Samstag',
    sun: 'Sonntag',
  };
%>

<section class="admin opening-hours">
  <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-4">
    <div>
      <h1 class="h3 mb-1">Öffnungszeit bearbeiten</h1>
      <p class="text-muted mb-0"><%= dayLabels[safeHour.dayOfWeek] || safeHour.dayOfWeek || '' %></p>
    </div>
    <div class="d-flex gap-2">
      <a href="/admin/opening-hours/<%= safeHour.id %>" class="btn btn-outline-secondary">Zurück</a>
    </div>
  </div>

  <form method="post" action="/admin/opening-hours/<%= safeHour.id %>" class="card shadow-sm">
    <input type="hidden" name="csrfToken" value="<%= csrfToken || '' %>">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <label for="dayOfWeek" class="form-label">Wochentag</label>
          <select id="dayOfWeek" name="dayOfWeek" class="form-select <%= errorFor('dayOfWeek') ? 'is-invalid' : '' %>">
            <option value="">Bitte wählen</option>
            <% Object.keys(dayLabels).forEach(function(key) { %>
              <option value="<%= key %>" <%= values.dayOfWeek === key ? 'selected' : '' %>><%= dayLabels[key] %></option>
            <% }) %>
          </select>
          <% if (errorFor('dayOfWeek')) { %><div class="invalid-feedback"><%= errorFor('dayOfWeek') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="isClosed" class="form-label">Status</label>
          <select id="isClosed" name="isClosed" class="form-select">
            <option value="false" <%= values.isClosed === true || values.isClosed === 'true' ? '' : 'selected' %>>Offen</option>
            <option value="true" <%= values.isClosed === true || values.isClosed === 'true' ? 'selected' : '' %>>Geschlossen</option>
          </select>
        </div>
        <div class="col-md-6">
          <label for="openTime" class="form-label">Öffnet (HH:MM)</label>
          <input type="text" class="form-control <%= errorFor('openTime') ? 'is-invalid' : '' %>" id="openTime" name="openTime" value="<%= values.openTime || '' %>" placeholder="08:00">
          <% if (errorFor('openTime')) { %><div class="invalid-feedback"><%= errorFor('openTime') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="closeTime" class="form-label">Schließt (HH:MM)</label>
          <input type="text" class="form-control <%= errorFor('closeTime') ? 'is-invalid' : '' %>" id="closeTime" name="closeTime" value="<%= values.closeTime || '' %>" placeholder="17:00">
          <% if (errorFor('closeTime')) { %><div class="invalid-feedback"><%= errorFor('closeTime') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="pickupOpenTime" class="form-label">Abholung von (HH:MM)</label>
          <input type="text" class="form-control <%= errorFor('pickupOpenTime') ? 'is-invalid' : '' %>" id="pickupOpenTime" name="pickupOpenTime" value="<%= values.pickupOpenTime || '' %>" placeholder="09:00">
          <% if (errorFor('pickupOpenTime')) { %><div class="invalid-feedback"><%= errorFor('pickupOpenTime') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="pickupCloseTime" class="form-label">Abholung bis (HH:MM)</label>
          <input type="text" class="form-control <%= errorFor('pickupCloseTime') ? 'is-invalid' : '' %>" id="pickupCloseTime" name="pickupCloseTime" value="<%= values.pickupCloseTime || '' %>" placeholder="12:00">
          <% if (errorFor('pickupCloseTime')) { %><div class="invalid-feedback"><%= errorFor('pickupCloseTime') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="returnOpenTime" class="form-label">Rückgabe von (HH:MM)</label>
          <input type="text" class="form-control <%= errorFor('returnOpenTime') ? 'is-invalid' : '' %>" id="returnOpenTime" name="returnOpenTime" value="<%= values.returnOpenTime || '' %>" placeholder="13:00">
          <% if (errorFor('returnOpenTime')) { %><div class="invalid-feedback"><%= errorFor('returnOpenTime') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="returnCloseTime" class="form-label">Rückgabe bis (HH:MM)</label>
          <input type="text" class="form-control <%= errorFor('returnCloseTime') ? 'is-invalid' : '' %>" id="returnCloseTime" name="returnCloseTime" value="<%= values.returnCloseTime || '' %>" placeholder="16:00">
          <% if (errorFor('returnCloseTime')) { %><div class="invalid-feedback"><%= errorFor('returnCloseTime') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="validFrom" class="form-label">Gültig von</label>
          <input type="date" class="form-control <%= errorFor('validFrom') ? 'is-invalid' : '' %>" id="validFrom" name="validFrom" value="<%= values.validFrom || '' %>">
          <% if (errorFor('validFrom')) { %><div class="invalid-feedback"><%= errorFor('validFrom') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="validTo" class="form-label">Gültig bis</label>
          <input type="date" class="form-control <%= errorFor('validTo') ? 'is-invalid' : '' %>" id="validTo" name="validTo" value="<%= values.validTo || '' %>">
          <% if (errorFor('validTo')) { %><div class="invalid-feedback"><%= errorFor('validTo') %></div><% } %>
        </div>
      </div>
    </div>
    <div class="card-footer d-flex flex-wrap gap-2 justify-content-end">
      <button type="submit" class="btn btn-primary">Speichern</button>
      <a href="/admin/opening-hours/<%= safeHour.id %>" class="btn btn-outline-secondary">Abbrechen</a>
    </div>
  </form>
</section>
