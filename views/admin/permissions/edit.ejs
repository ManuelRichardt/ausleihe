<% pageTitle = 'Permission bearbeiten' %>
<%
  const safeFormData = (typeof formData !== 'undefined' && formData) ? formData : null;
  const safePermission = (typeof permission !== 'undefined' && permission) ? permission : {};
  const values = (safeFormData && Object.keys(safeFormData).length) ? safeFormData : safePermission;
  const safeErrors = (typeof errors !== 'undefined' && errors) ? errors : null;
  const errorsList = Array.isArray(safeErrors) ? safeErrors : [];
  const errorsMap = (!Array.isArray(safeErrors) && safeErrors) ? safeErrors : {};
  const errorFor = function (field) {
    if (errorsMap && errorsMap[field]) return errorsMap[field];
    const match = errorsList.find(function (err) { return err.field === field; });
    return match ? match.message : '';
  };
%>

<section class="admin permissions">
  <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-4">
    <div>
      <h1 class="h3 mb-1">Permission bearbeiten</h1>
      <p class="text-muted mb-0"><%= safePermission.key || '' %></p>
    </div>
    <a href="/admin/permissions" class="btn btn-outline-secondary">Zur Ãœbersicht</a>
  </div>

  <form method="post" action="/admin/permissions/<%= safePermission.id %>" class="card shadow-sm">
    <input type="hidden" name="csrfToken" value="<%= csrfToken || '' %>">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <label for="key" class="form-label">Key</label>
          <input type="text" class="form-control <%= errorFor('key') ? 'is-invalid' : '' %>" id="key" name="key" value="<%= values.key || '' %>">
          <% if (errorFor('key')) { %><div class="invalid-feedback"><%= errorFor('key') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="scope" class="form-label">Scope</label>
          <select id="scope" name="scope" class="form-select">
            <option value="global" <%= values.scope === 'global' ? 'selected' : '' %>>Global</option>
            <option value="ausleihe" <%= values.scope === 'ausleihe' ? 'selected' : '' %>>Ausleihe</option>
            <option value="both" <%= values.scope === 'both' ? 'selected' : '' %>>Beide</option>
          </select>
        </div>
        <div class="col-12">
          <label for="description" class="form-label">Beschreibung</label>
          <textarea id="description" name="description" class="form-control" rows="3"><%= values.description || '' %></textarea>
        </div>
      </div>
    </div>

    <div class="card-footer d-flex flex-wrap gap-2 justify-content-end">
      <button type="submit" class="btn btn-primary">Speichern</button>
      <a href="/admin/permissions" class="btn btn-outline-secondary">Abbrechen</a>
    </div>
  </form>
</section>
