  sectionClass: 'categories',
  heading: 'Kategorien',
  filters: filters,
  pagination: pagination,
  items: categories,
  filterAction: '/admin/categories',
  filterPartial: '../categories/indexFilters',
  createHref: '/admin/categories/new',
  createLabel: 'Neue Kategorie',
  columns: [
    {
      label: 'Bild',
      type: 'image',
