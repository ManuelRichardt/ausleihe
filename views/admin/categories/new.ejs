<% pageTitle = 'Neue Kategorie' %>
<%
  const safeFormData = (typeof formData !== 'undefined' && formData) ? formData : null;
  const values = (safeFormData && Object.keys(safeFormData).length) ? safeFormData : {};
  const safeErrors = (typeof errors !== 'undefined' && errors) ? errors : null;
  const errorsList = Array.isArray(safeErrors) ? safeErrors : [];
  const errorsMap = (!Array.isArray(safeErrors) && safeErrors) ? safeErrors : {};
  const errorFor = function (field) {
    if (errorsMap && errorsMap[field]) {
      return errorsMap[field];
    }
    const match = errorsList.find(function (err) { return err.field === field; });
    return match ? match.message : '';
  };
%>

<section class="admin categories">
  <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-4">
    <div>
      <h1 class="h3 mb-1">Neue Kategorie</h1>
      <p class="text-muted mb-0">Kategorie für die aktuelle Ausleihe anlegen.</p>
    </div>
    <div class="d-flex gap-2">
      <a href="/admin/categories" class="btn btn-outline-secondary">Zur Übersicht</a>
    </div>
  </div>

  <form method="post" action="/admin/categories?csrfToken=<%= encodeURIComponent(csrfToken || '') %>" class="card shadow-sm" enctype="multipart/form-data">
    <input type="hidden" name="csrfToken" value="<%= csrfToken || '' %>">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control <%= errorFor('name') ? 'is-invalid' : '' %>" id="name" name="name" value="<%= values.name || '' %>">
          <% if (errorFor('name')) { %><div class="invalid-feedback"><%= errorFor('name') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="isActive" class="form-label">Status</label>
          <select id="isActive" name="isActive" class="form-select">
            <option value="true" <%= (values.isActive === false || values.isActive === 'false') ? '' : 'selected' %>>Aktiv</option>
            <option value="false" <%= (values.isActive === false || values.isActive === 'false') ? 'selected' : '' %>>Inaktiv</option>
          </select>
        </div>
        <div class="col-12">
          <label for="description" class="form-label">Beschreibung</label>
          <textarea class="form-control <%= errorFor('description') ? 'is-invalid' : '' %>" id="description" name="description" rows="3"><%= values.description || '' %></textarea>
          <% if (errorFor('description')) { %><div class="invalid-feedback"><%= errorFor('description') %></div><% } %>
        </div>
        <div class="col-12">
          <label for="image" class="form-label">Bild</label>
          <input type="file" class="form-control <%= errorFor('image') ? 'is-invalid' : '' %>" id="image" name="image" accept="image/*">
          <% if (errorFor('image')) { %><div class="invalid-feedback"><%= errorFor('image') %></div><% } %>
        </div>
      </div>
    </div>
    <div class="card-footer d-flex flex-wrap gap-2 justify-content-end">
      <button type="submit" class="btn btn-primary">Kategorie anlegen</button>
      <a href="/admin/categories" class="btn btn-outline-secondary">Abbrechen</a>
    </div>
  </form>
</section>
