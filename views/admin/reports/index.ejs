<% pageTitle = 'Druck & PDF' %>
<%
  const safeFilters = (typeof filters !== 'undefined' && filters) ? filters : {};
  const activeLocationId = (typeof lendingLocationId !== 'undefined' && lendingLocationId)
    ? lendingLocationId
    : (lendingLocation && lendingLocation.id ? lendingLocation.id : '');
%>

<section class="admin reports">
  <div class="d-flex flex-column flex-lg-row align-items-lg-end justify-content-between gap-3 mb-4">
    <div>
      <h1 class="h3 mb-2">Druck & PDF</h1>
      <p class="text-muted mb-0">Inventurlisten, Wartungsberichte und Assetetiketten erzeugen.</p>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-12 col-lg-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h2 class="h5 mb-3">Inventurliste</h2>
          <p class="text-muted small">Exportiert alle Modelle der aktiven Ausleihe mit Bestandsinformationen.</p>
          <form method="get" action="/admin/reports/inventory.pdf" target="_blank">
            <input type="hidden" name="lendingLocationId" value="<%= activeLocationId %>">
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="includeInactive" name="includeInactive" value="1" <%= safeFilters.includeInactive ? 'checked' : '' %>>
              <label class="form-check-label" for="includeInactive">Inaktive Modelle einbeziehen</label>
            </div>
            <button type="submit" class="btn btn-primary">Inventurliste drucken</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-12 col-lg-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h2 class="h5 mb-3">Wartungsbericht</h2>
          <p class="text-muted small">Listet Wartungsf√§lle der aktiven Ausleihe als PDF.</p>
          <form method="get" action="/admin/reports/maintenance.pdf" target="_blank">
            <input type="hidden" name="lendingLocationId" value="<%= activeLocationId %>">
            <div class="mb-2">
              <label class="form-label" for="maintenanceStatus">Status</label>
              <select id="maintenanceStatus" name="status" class="form-select">
                <option value="">Alle</option>
                <option value="reported" <%= safeFilters.maintenanceStatus === 'reported' ? 'selected' : '' %>>Gemeldet</option>
                <option value="in_progress" <%= safeFilters.maintenanceStatus === 'in_progress' ? 'selected' : '' %>>In Arbeit</option>
                <option value="completed" <%= safeFilters.maintenanceStatus === 'completed' ? 'selected' : '' %>>Abgeschlossen</option>
                <option value="cancelled" <%= safeFilters.maintenanceStatus === 'cancelled' ? 'selected' : '' %>>Abgebrochen</option>
              </select>
            </div>
            <div class="row g-2 mb-3">
              <div class="col-6">
                <label class="form-label" for="maintenanceFrom">Von</label>
                <input type="date" class="form-control" id="maintenanceFrom" name="dateFrom" value="<%= safeFilters.maintenanceFrom || '' %>">
              </div>
              <div class="col-6">
                <label class="form-label" for="maintenanceTo">Bis</label>
                <input type="date" class="form-control" id="maintenanceTo" name="dateTo" value="<%= safeFilters.maintenanceTo || '' %>">
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Wartungsbericht drucken</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-12 col-lg-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h2 class="h5 mb-3">Assetetiketten (Code 128)</h2>
          <p class="text-muted small">Erzeugt druckbare Etiketten mit Inventarnummer und Code-128 Barcode.</p>
          <form method="get" action="/admin/reports/labels.pdf" target="_blank">
            <input type="hidden" name="lendingLocationId" value="<%= activeLocationId %>">
            <div class="mb-2">
              <label class="form-label" for="labelQuery">Suche</label>
              <input type="text" class="form-control" id="labelQuery" name="q" value="<%= safeFilters.labelQuery || '' %>" placeholder="Inventarnummer oder Seriennummer">
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="labelOnlyActive" name="onlyActive" value="1" <%= safeFilters.labelOnlyActive ? 'checked' : '' %>>
              <label class="form-check-label" for="labelOnlyActive">Nur ausleihbare Assets</label>
            </div>
            <button type="submit" class="btn btn-primary">Etiketten drucken</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
