<% pageTitle = 'Custom Field anlegen' %>
<%
  const safeFormData = (typeof formData !== 'undefined' && formData) ? formData : null;
  const values = (safeFormData && Object.keys(safeFormData).length) ? safeFormData : {};
  const safeErrors = (typeof errors !== 'undefined' && errors) ? errors : null;
  const errorsList = Array.isArray(safeErrors) ? safeErrors : [];
  const errorsMap = (!Array.isArray(safeErrors) && safeErrors) ? safeErrors : {};
  const errorFor = function (field) {
    if (errorsMap && errorsMap[field]) return errorsMap[field];
    const match = errorsList.find(function (err) { return err.field === field; });
    return match ? match.message : '';
  };
%>

<section class="admin custom-fields">
  <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-4">
    <div>
      <h1 class="h3 mb-1">Custom Field anlegen</h1>
      <p class="text-muted mb-0">Bitte alle Pflichtfelder ausfüllen.</p>
    </div>
    <div class="d-flex gap-2">
      <a href="/admin/custom-fields" class="btn btn-outline-secondary">Zur Übersicht</a>
    </div>
  </div>

  <form method="post" action="/admin/custom-fields" class="card shadow-sm">
    <input type="hidden" name="csrfToken" value="<%= csrfToken || '' %>">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <label for="key" class="form-label">Key</label>
          <input type="text" class="form-control <%= errorFor('key') ? 'is-invalid' : '' %>" id="key" name="key" value="<%= values.key || '' %>">
          <% if (errorFor('key')) { %><div class="invalid-feedback"><%= errorFor('key') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="label" class="form-label">Label</label>
          <input type="text" class="form-control <%= errorFor('label') ? 'is-invalid' : '' %>" id="label" name="label" value="<%= values.label || '' %>">
          <% if (errorFor('label')) { %><div class="invalid-feedback"><%= errorFor('label') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="type" class="form-label">Typ</label>
          <select id="type" name="type" class="form-select <%= errorFor('type') ? 'is-invalid' : '' %>">
            <option value="string" <%= values.type === 'string' ? 'selected' : '' %>>String</option>
            <option value="text" <%= values.type === 'text' ? 'selected' : '' %>>Text</option>
            <option value="number" <%= values.type === 'number' ? 'selected' : '' %>>Number</option>
            <option value="boolean" <%= values.type === 'boolean' ? 'selected' : '' %>>Boolean</option>
            <option value="date" <%= values.type === 'date' ? 'selected' : '' %>>Date</option>
            <option value="enum" <%= values.type === 'enum' ? 'selected' : '' %>>Enum</option>
          </select>
          <% if (errorFor('type')) { %><div class="invalid-feedback"><%= errorFor('type') %></div><% } %>
        </div>
        <div class="col-12">
          <label for="enumValues" class="form-label">Enum Werte (JSON)</label>
          <textarea id="enumValues" name="enumValues" class="form-control" rows="3"><%= values.enumValues || '' %></textarea>
        </div>
        <div class="col-md-6">
          <label for="defaultValue" class="form-label">Default Value</label>
          <input type="text" class="form-control" id="defaultValue" name="defaultValue" value="<%= values.defaultValue || '' %>">
        </div>
        <div class="col-md-3">
          <label class="form-label d-block">Pflichtfeld</label>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="required" id="required" <%= values.required ? 'checked' : '' %>>
            <label class="form-check-label" for="required">Required</label>
          </div>
        </div>
        <div class="col-md-3">
          <label class="form-label d-block">Aktiv</label>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="isActive" id="isActive" <%= values.isActive !== false ? 'checked' : '' %>>
            <label class="form-check-label" for="isActive">Aktiv</label>
          </div>
        </div>
      </div>
    </div>

    <div class="card-footer d-flex flex-wrap gap-2 justify-content-end">
      <button type="submit" class="btn btn-primary">Custom Field anlegen</button>
      <a href="/admin/custom-fields" class="btn btn-outline-secondary">Abbrechen</a>
    </div>
  </form>
</section>
