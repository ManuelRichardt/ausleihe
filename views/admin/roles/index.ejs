<% pageTitle = 'Rollen' %>
<%
  const query = (typeof filters !== 'undefined' && filters) ? filters : {};
  const currentPage = (pagination && pagination.page) ? pagination.page : 1;
  const totalRoles = (pagination && pagination.total) ? pagination.total : (Array.isArray(roles) ? roles.length : 0);
  const sortBy = query.sortBy || '';
  const sortOrder = query.sortOrder || 'ASC';
  const includeDeleted = query.includeDeleted === '1' || query.includeDeleted === 'true' || query.includeDeleted === 'yes';
  const includeDeletedToggleLabel = includeDeleted ? 'Nur aktive anzeigen' : 'Gelöschte anzeigen';
  const buildQuery = function (overrides) {
    const params = Object.assign({}, query, overrides || {});
    const parts = [];
    Object.keys(params).forEach(function (key) {
      const value = params[key];
      if (typeof value !== 'undefined' && value !== null && value !== '') {
        parts.push(encodeURIComponent(key) + '=' + encodeURIComponent(String(value)));
      }
    });
    return parts.length ? ('?' + parts.join('&')) : '';
  };
  const sortLink = function (field) {
    const nextOrder = (sortBy === field && sortOrder === 'ASC') ? 'DESC' : 'ASC';
    return buildQuery({ sortBy: field, sortOrder: nextOrder, page: 1 });
  };
  const includeDeletedLink = buildQuery({ includeDeleted: includeDeleted ? '' : '1', page: 1 });
%>

<section class="admin roles">
  <div class="d-flex flex-column flex-lg-row align-items-lg-end justify-content-between gap-3 mb-4">
    <div>
      <h1 class="h3 mb-2">Rollen</h1>
    </div>
  </div>

  <form method="get" action="/admin/roles" class="row g-2 align-items-end mb-4 panel">
    <input type="hidden" name="includeDeleted" value="<%= includeDeleted ? '1' : '' %>">
    <div class="col-12 col-md-6">
      <label for="q" class="form-label">Rollensuche</label>
      <input type="text" class="form-control" id="q" name="q" value="<%= query.q || '' %>" placeholder="Name, Beschreibung">
    </div>
    <div class="col-12 col-md-3">
      <label for="scope" class="form-label">Scope</label>
      <select id="scope" name="scope" class="form-select">
        <option value="">Alle</option>
        <option value="global" <%= query.scope === 'global' ? 'selected' : '' %>>Global</option>
        <option value="ausleihe" <%= query.scope === 'ausleihe' ? 'selected' : '' %>>Ausleihe</option>
        <option value="both" <%= query.scope === 'both' ? 'selected' : '' %>>Beide</option>
      </select>
    </div>
    <div class="col-12 col-md-3 d-flex gap-2">
      <button type="submit" class="btn btn-outline-primary w-100">
        <i class="bi bi-search me-1"></i> Suchen
      </button>
    </div>
  </form>

  <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2 mb-3">
    <div class="d-flex align-items-center gap-2">
      <nav aria-label="Pagination">
        <ul class="pagination mb-0">
          <li class="page-item <%= currentPage <= 1 ? 'disabled' : '' %>">
            <a class="page-link" href="<%= buildQuery({ page: currentPage - 1 }) %>"><i class="bi bi-caret-left-fill"></i></a>
          </li>
          <li class="page-item active">
            <span class="page-link"><%= currentPage %></span>
          </li>
          <li class="page-item <%= pagination && pagination.hasNext ? '' : 'disabled' %>">
            <a class="page-link" href="<%= buildQuery({ page: currentPage + 1 }) %>"><i class="bi bi-caret-right-fill"></i></a>
          </li>
        </ul>
      </nav>
      <a href="/admin/roles/new" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Neue Rolle
      </a>
      <a href="<%= includeDeletedLink %>" class="btn btn-outline-secondary">
        <i class="bi bi-recycle me-1"></i> <%= includeDeletedToggleLabel %>
      </a>
    </div>
  </div>

  <div class="table-responsive panel">
    <table class="table table-hover align-middle">
      <thead>
        <tr>
          <th><a class="text-decoration-none" href="<%= sortLink('name') %>">Name</a></th>
          <th><a class="text-decoration-none" href="<%= sortLink('scope') %>">Scope</a></th>
          <th>Beschreibung</th>
          <th>Aktionen</th>
        </tr>
      </thead>
      <tbody>
        <% if (Array.isArray(roles) && roles.length) { %>
          <% roles.forEach(function(role) { %>
            <tr>
              <td><%= role.name %></td>
              <td><span class="badge text-bg-light text-dark border"><%= role.scope %></span></td>
              <td><%= role.description || '-' %></td>
              <td class="d-flex gap-2">
                <% if (role.deletedAt) { %>
                  <span class="badge text-bg-secondary">Gelöscht</span>
                  <form method="post" action="/admin/roles/<%= role.id %>/restore">
                    <input type="hidden" name="csrfToken" value="<%= csrfToken || '' %>">
                    <input type="hidden" name="includeDeleted" value="<%= includeDeleted ? '1' : '' %>">
                    <button type="submit" class="btn btn-link p-0 text-decoration-none" aria-label="Wiederherstellen">
                      <i class="bi bi-recycle"></i>
                    </button>
                  </form>
                <% } else { %>
                  <a href="/admin/roles/<%= role.id %>/edit" class="text-decoration-none" aria-label="Bearbeiten">
                    <i class="bi bi-pencil-fill"></i>
                  </a>
                  <form method="post" action="/admin/roles/<%= role.id %>/delete">
                    <input type="hidden" name="csrfToken" value="<%= csrfToken || '' %>">
                    <button type="submit" class="btn btn-link p-0 text-decoration-none" aria-label="Löschen">
                      <i class="bi bi-trash3-fill"></i>
                    </button>
                  </form>
                <% } %>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr><td colspan="4" class="text-center text-muted py-4">Keine Rollen vorhanden.</td></tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2 mt-3">
    <div class="d-flex align-items-center gap-2">
      <nav aria-label="Pagination">
        <ul class="pagination mb-0">
          <li class="page-item <%= currentPage <= 1 ? 'disabled' : '' %>">
            <a class="page-link" href="<%= buildQuery({ page: currentPage - 1 }) %>"><i class="bi bi-caret-left-fill"></i></a>
          </li>
          <li class="page-item active">
            <span class="page-link"><%= currentPage %></span>
          </li>
          <li class="page-item <%= pagination && pagination.hasNext ? '' : 'disabled' %>">
            <a class="page-link" href="<%= buildQuery({ page: currentPage + 1 }) %>"><i class="bi bi-caret-right-fill"></i></a>
          </li>
        </ul>
      </nav>
      <a href="/admin/roles/new" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Neue Rolle
      </a>
      <a href="<%= includeDeletedLink %>" class="btn btn-outline-secondary">
        <i class="bi bi-recycle me-1"></i> <%= includeDeletedToggleLabel %>
      </a>
    </div>
  </div>
</section>
