<% pageTitle = 'Rolle bearbeiten' %>
<%
  const safeFormData = (typeof formData !== 'undefined' && formData) ? formData : null;
  const safeRole = (typeof role !== 'undefined' && role) ? role : {};
  const values = (safeFormData && Object.keys(safeFormData).length) ? safeFormData : safeRole;
  const safeErrors = (typeof errors !== 'undefined' && errors) ? errors : null;
  const errorsList = Array.isArray(safeErrors) ? safeErrors : [];
  const errorsMap = (!Array.isArray(safeErrors) && safeErrors) ? safeErrors : {};
  const errorFor = function (field) {
    if (errorsMap && errorsMap[field]) return errorsMap[field];
    const match = errorsList.find(function (err) { return err.field === field; });
    return match ? match.message : '';
  };
  const permissionList = (typeof permissions !== 'undefined' && Array.isArray(permissions)) ? permissions : [];
  const assigned = new Set();
  if (safeRole && Array.isArray(safeRole.permissions)) {
    safeRole.permissions.forEach(function (permission) {
      if (permission && permission.id) assigned.add(permission.id);
    });
  }
  if (Array.isArray(values.permissionIds)) {
    values.permissionIds.forEach(function (permissionId) {
      assigned.add(permissionId);
    });
  }
%>

<section class="admin roles">
  <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-4">
    <div>
      <h1 class="h3 mb-1">Rolle bearbeiten</h1>
      <p class="text-muted mb-0"><%= safeRole.name || '' %></p>
    </div>
    <a href="/admin/roles" class="btn btn-outline-secondary">Zur Übersicht</a>
  </div>

  <form method="post" action="/admin/roles/<%= safeRole.id %>" class="card shadow-sm">
    <input type="hidden" name="csrfToken" value="<%= csrfToken || '' %>">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control <%= errorFor('name') ? 'is-invalid' : '' %>" id="name" name="name" value="<%= values.name || '' %>">
          <% if (errorFor('name')) { %><div class="invalid-feedback"><%= errorFor('name') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="scope" class="form-label">Scope</label>
          <select id="scope" name="scope" class="form-select <%= errorFor('scope') ? 'is-invalid' : '' %>">
            <option value="global" <%= values.scope === 'global' ? 'selected' : '' %>>Global</option>
            <option value="ausleihe" <%= values.scope === 'ausleihe' ? 'selected' : '' %>>Ausleihe</option>
            <option value="both" <%= values.scope === 'both' ? 'selected' : '' %>>Beide</option>
          </select>
          <% if (errorFor('scope')) { %><div class="invalid-feedback"><%= errorFor('scope') %></div><% } %>
        </div>
        <div class="col-12">
          <label for="description" class="form-label">Beschreibung</label>
          <textarea id="description" name="description" class="form-control" rows="3"><%= values.description || '' %></textarea>
        </div>
      </div>

      <hr class="my-4">

      <div>
        <h2 class="h5">Permissions zuweisen</h2>
        <% if (permissionList.length) { %>
          <div class="row g-2">
            <% permissionList.forEach(function(permission) { %>
              <div class="col-12 col-md-6 col-lg-4">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="permissionIds" id="perm_<%= permission.id %>" value="<%= permission.id %>" <%= assigned.has(permission.id) ? 'checked' : '' %>>
                  <label class="form-check-label" for="perm_<%= permission.id %>"><%= permission.key %></label>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <p class="text-muted">Keine Permissions verfügbar.</p>
        <% } %>
      </div>
    </div>

    <div class="card-footer d-flex flex-wrap gap-2 justify-content-end">
      <button type="submit" class="btn btn-primary">Speichern</button>
      <a href="/admin/roles" class="btn btn-outline-secondary">Abbrechen</a>
    </div>
  </form>
</section>
