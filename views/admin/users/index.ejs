<% pageTitle = 'Benutzer' %>
<%
  const query = (typeof filters !== 'undefined' && filters) ? filters : {};
  const currentPage = (pagination && pagination.page) ? pagination.page : 1;
  const totalUsers = (pagination && pagination.total) ? pagination.total : (Array.isArray(users) ? users.length : 0);
  const sortBy = query.sortBy || '';
  const sortOrder = query.sortOrder || 'ASC';
  const includeDeleted = query.includeDeleted === '1' || query.includeDeleted === 'true' || query.includeDeleted === 'yes';
  const includeDeletedToggleLabel = includeDeleted ? 'Nur aktive anzeigen' : 'Gelöschte anzeigen';
  const locationOptions = (typeof lendingLocations !== 'undefined' && Array.isArray(lendingLocations)) ? lendingLocations : [];
  const buildQuery = function (overrides) {
    const params = Object.assign({}, query, overrides || {});
    const parts = [];
    Object.keys(params).forEach(function (key) {
      const value = params[key];
      if (typeof value !== 'undefined' && value !== null && value !== '') {
        parts.push(encodeURIComponent(key) + '=' + encodeURIComponent(String(value)));
      }
    });
    return parts.length ? ('?' + parts.join('&')) : '';
  };
  const sortLink = function (field) {
    const nextOrder = (sortBy === field && sortOrder === 'ASC') ? 'DESC' : 'ASC';
    return buildQuery({ sortBy: field, sortOrder: nextOrder, page: 1 });
  };
  const includeDeletedLink = buildQuery({ includeDeleted: includeDeleted ? '' : '1', page: 1 });
%>

<section class="admin users">
  <div class="d-flex flex-column flex-lg-row align-items-lg-end justify-content-between gap-3 mb-4">
    <div>
      <h1 class="h3 mb-2">Benutzer</h1>
    </div>
  </div>

  <form method="get" action="/admin/users" class="row g-2 align-items-end mb-4 panel">
    <input type="hidden" name="includeDeleted" value="<%= includeDeleted ? '1' : '' %>">
    <div class="col-12 col-md-6">
      <label for="q" class="form-label">Benutzersuche</label>
      <input type="text" class="form-control" id="q" name="q" value="<%= query.q || '' %>" placeholder="Vorname, Nachname, E-Mail, Benutzername">
    </div>
    <div class="col-12 col-md-3">
      <label for="status" class="form-label">Status</label>
      <select id="status" name="status" class="form-select">
        <option value="">Alle</option>
        <option value="active" <%= query.status === 'active' ? 'selected' : '' %>>Aktiv</option>
        <option value="blocked" <%= query.status === 'blocked' ? 'selected' : '' %>>Gesperrt</option>
      </select>
    </div>
    <div class="col-12 col-md-3 d-flex gap-2">
      <button type="submit" class="btn btn-outline-primary w-100">
        <i class="bi bi-search me-1"></i> Suchen
      </button>
    </div>
  </form>

  <form method="post" action="/admin/users/bulk" class="mb-4 panel" data-bulk-select>
    <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2 mb-3">
      <div class="d-flex align-items-center gap-2">
        <nav aria-label="Pagination">
          <ul class="pagination mb-0">
            <li class="page-item <%= currentPage <= 1 ? 'disabled' : '' %>">
              <a class="page-link" href="<%= buildQuery({ page: currentPage - 1 }) %>"><i class="bi bi-caret-left-fill"></i></a>
            </li>
            <li class="page-item active">
              <span class="page-link"><%= currentPage %></span>
            </li>
            <li class="page-item <%= pagination && pagination.hasNext ? '' : 'disabled' %>">
              <a class="page-link" href="<%= buildQuery({ page: currentPage + 1 }) %>"><i class="bi bi-caret-right-fill"></i></a>
            </li>
          </ul>
        </nav>
        <a href="/admin/users/new" class="btn btn-primary">
          <i class="bi bi-plus-circle me-1"></i> Neuer Benutzer
        </a>
        <a href="<%= includeDeletedLink %>" class="btn btn-outline-secondary">
          <i class="bi bi-recycle me-1"></i> <%= includeDeletedToggleLabel %>
        </a>
      </div>
    </div>
    <input type="hidden" name="csrfToken" value="<%= csrfToken || '' %>">
    <input type="hidden" name="includeDeleted" value="<%= includeDeleted ? '1' : '' %>">
    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead>
          <tr>
            <th scope="col"><input type="checkbox" aria-label="Alle auswählen" data-bulk-select-all></th>
            <th scope="col"><a class="text-decoration-none" href="<%= sortLink('firstName') %>">Vorname</a></th>
            <th scope="col"><a class="text-decoration-none" href="<%= sortLink('lastName') %>">Nachname</a></th>
            <th scope="col"><a class="text-decoration-none" href="<%= sortLink('email') %>">E-Mail</a></th>
            <th scope="col">Rollen</th>
            <th scope="col">Status / Aktionen</th>
          </tr>
        </thead>
        <tbody>
          <% if (Array.isArray(users) && users.length) { %>
            <% users.forEach(function(u) { %>
              <tr>
                <td>
                  <% if (u.deletedAt) { %>
                    <input type="checkbox" disabled aria-label="Benutzer gelöscht">
                  <% } else { %>
                    <input type="checkbox" name="userIds" value="<%= u.id %>" aria-label="Benutzer auswählen" data-bulk-select-item>
                  <% } %>
                </td>
                <td><%= u.firstName || '-' %></td>
                <td><%= u.lastName || '-' %></td>
                <td><%= u.email || '-' %></td>
                <td>
                  <% if (u.roles && u.roles.length) { %>
                    <span class="text-muted"><%= u.roles.map(function(r){ return r.name; }).join(', ') %></span>
                  <% } else { %>
                    <span class="text-muted">-</span>
                  <% } %>
                </td>
                <td class="d-flex align-items-center gap-2">
                  <% if (u.deletedAt) { %>
                    <span class="badge text-bg-secondary">Gelöscht</span>
                    <button type="submit" class="btn btn-link p-0 text-decoration-none" formaction="/admin/users/<%= u.id %>/restore" formmethod="post" aria-label="Wiederherstellen">
                      <i class="bi bi-recycle"></i>
                    </button>
                  <% } else { %>
                    <% if (u.isActive) { %>
                      <span class="badge text-bg-success">Aktiv</span>
                    <% } else { %>
                      <span class="badge text-bg-danger">Gesperrt</span>
                    <% } %>
                    <a href="/admin/users/<%= u.id %>" class="text-decoration-none" aria-label="Details">
                      <i class="bi bi-info-circle-fill"></i>
                    </a>
                    <a href="/admin/users/<%= u.id %>/edit" class="text-decoration-none" aria-label="Bearbeiten">
                      <i class="bi bi-pencil-fill"></i>
                    </a>
                    <button type="submit" class="btn btn-link p-0 text-decoration-none" formaction="/admin/users/<%= u.id %>/delete" formmethod="post" aria-label="Löschen">
                      <i class="bi bi-trash3-fill"></i>
                    </button>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="6" class="text-center text-muted py-4">Keine Benutzer vorhanden.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
      <div class="d-flex align-items-center gap-2">
        <nav aria-label="Pagination">
          <ul class="pagination mb-0">
            <li class="page-item <%= currentPage <= 1 ? 'disabled' : '' %>">
              <a class="page-link" href="<%= buildQuery({ page: currentPage - 1 }) %>"><i class="bi bi-caret-left-fill"></i></a>
            </li>
            <li class="page-item active">
              <span class="page-link"><%= currentPage %></span>
            </li>
            <li class="page-item <%= pagination && pagination.hasNext ? '' : 'disabled' %>">
              <a class="page-link" href="<%= buildQuery({ page: currentPage + 1 }) %>"><i class="bi bi-caret-right-fill"></i></a>
            </li>
          </ul>
        </nav>
        <a href="/admin/users/new" class="btn btn-primary">
          <i class="bi bi-plus-circle me-1"></i> Neuer Benutzer
        </a>
        <a href="<%= includeDeletedLink %>" class="btn btn-outline-secondary">
          <i class="bi bi-recycle me-1"></i> <%= includeDeletedToggleLabel %>
        </a>
      </div>
      <div class="d-flex flex-column flex-md-row align-items-md-center gap-2">
        <button type="button" class="btn btn-outline-secondary" data-bulk-select-toggle>Alle auswählen</button>
        <div class="dropdown" data-bulk-actions>
          <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Bulk Aktionen
          </button>
          <div class="dropdown-menu p-3">
            <div class="mb-3">
              <div class="text-uppercase small text-muted fw-semibold mb-1">Rolle zuweisen</div>
              <% if (Array.isArray(roles) && roles.length) { %>
                <div class="d-flex flex-column gap-2" data-bulk-role-rows="assign">
                  <div class="d-flex flex-wrap gap-2 bulk-role-row" data-role-row>
                    <select class="form-select form-select-sm" name="bulkRoleIds" aria-label="Rolle wählen" data-role-select>
                      <option value="">Rolle wählen</option>
                      <% roles.forEach(function(role) { %>
                        <option value="<%= role.id %>" data-role-scope="<%= role.scope || '' %>"><%= role.name %></option>
                      <% }) %>
                    </select>
                    <select class="form-select form-select-sm" name="bulkRoleLocationIds" aria-label="Ausleihe wählen" data-role-location>
                      <option value="">Ausleihe wählen</option>
                      <% locationOptions.forEach(function(loc) { %>
                        <option value="<%= loc.id %>"><%= loc.name %></option>
                      <% }) %>
                    </select>
                    <button type="button" class="btn btn-outline-secondary btn-sm" data-remove-role-row aria-label="Entfernen">
                      <i class="bi bi-x-lg"></i>
                    </button>
                  </div>
                </div>
                <div class="d-flex gap-2 mt-2">
                  <button type="button" class="btn btn-outline-secondary btn-sm" data-add-role-row>Rolle hinzufügen</button>
                  <button type="button" class="btn btn-primary btn-sm" data-bulk-assign-submit>Rollen zuweisen</button>
                </div>
              <% } else { %>
                <span class="text-muted small">Keine Rollen verfügbar.</span>
              <% } %>
            </div>
            <div class="mt-3">
              <div class="text-uppercase small text-muted fw-semibold mb-1">Rolle entfernen</div>
              <% if (Array.isArray(roles) && roles.length) { %>
                <div class="d-flex flex-column gap-2" data-bulk-role-rows="remove">
                  <div class="d-flex flex-wrap gap-2 bulk-role-row" data-role-row>
                    <select class="form-select form-select-sm" name="bulkRemoveRoleIds" aria-label="Rolle wählen" data-role-select>
                      <option value="">Rolle wählen</option>
                      <% roles.forEach(function(role) { %>
                        <option value="<%= role.id %>" data-role-scope="<%= role.scope || '' %>"><%= role.name %></option>
                      <% }) %>
                    </select>
                    <select class="form-select form-select-sm" name="bulkRemoveRoleLocationIds" aria-label="Ausleihe optional">
                      <option value="">Alle Ausleihen</option>
                      <% locationOptions.forEach(function(loc) { %>
                        <option value="<%= loc.id %>"><%= loc.name %></option>
                      <% }) %>
                    </select>
                    <button type="button" class="btn btn-outline-secondary btn-sm" data-remove-role-row aria-label="Entfernen">
                      <i class="bi bi-x-lg"></i>
                    </button>
                  </div>
                </div>
                <div class="d-flex gap-2 mt-2">
                  <button type="button" class="btn btn-outline-secondary btn-sm" data-add-role-row>Rolle hinzufügen</button>
                  <button type="button" class="btn btn-outline-primary btn-sm" data-bulk-remove-submit>Rollen entfernen</button>
                </div>
              <% } else { %>
                <span class="text-muted small">Keine Rollen verfügbar.</span>
              <% } %>
            </div>
            <div class="dropdown-divider"></div>
            <button class="dropdown-item text-danger" type="button" data-bulk-action="delete">Ausgewählte löschen</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</section>
<script src="/js/bulk-select.js"></script>
<script src="/js/bulk-actions.js"></script>
<script src="/js/user-bulk-roles.js"></script>
