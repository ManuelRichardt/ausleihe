<% pageTitle = 'Benutzer bearbeiten' %>
<%
  const isEdit = true;
  const safeFormData = (typeof formData !== 'undefined' && formData) ? formData : null;
  const safeUser = (typeof user !== 'undefined' && user) ? user : {};
  const values = (safeFormData && Object.keys(safeFormData).length) ? safeFormData : safeUser;
  const safeRoles = (typeof roles !== 'undefined' && Array.isArray(roles)) ? roles : [];
  const rolesList = (typeof allRoles !== 'undefined' && Array.isArray(allRoles)) ? allRoles : safeRoles;
  const assignedRoleIds = new Set();
  const assignedRoleLocations = new Map();
  if (safeUser && Array.isArray(safeUser.roles)) {
    safeUser.roles.forEach(function (role) {
      if (role && role.id) assignedRoleIds.add(role.id);
    });
  }
  if (typeof userRoles !== 'undefined' && Array.isArray(userRoles)) {
    userRoles.forEach(function (role) {
      const roleId = role && (role.roleId || (role.role && role.role.id));
      if (roleId) {
        assignedRoleIds.add(roleId);
        const locationId = role.lendingLocationId || (role.lendingLocation && role.lendingLocation.id) || null;
        if (locationId) {
          assignedRoleLocations.set(locationId, roleId);
        }
      }
    });
  }
  if (safeFormData && Object.keys(safeFormData).length) {
    Object.keys(safeFormData).forEach(function (key) {
      if (key.startsWith('locationRole_')) {
        const locationId = key.replace('locationRole_', '');
        assignedRoleLocations.set(locationId, safeFormData[key]);
      }
    });
  }
  const locationOptions = (typeof lendingLocations !== 'undefined' && Array.isArray(lendingLocations)) ? lendingLocations : [];
  const globalRoles = rolesList.filter(function (role) { return role.scope !== 'ausleihe'; });
  const locationRoles = rolesList.filter(function (role) { return role.scope === 'ausleihe'; });
  const safeErrors = (typeof errors !== 'undefined' && errors) ? errors : null;
  const errorsList = Array.isArray(safeErrors) ? safeErrors : [];
  const errorsMap = (!Array.isArray(safeErrors) && safeErrors) ? safeErrors : {};
  const errorFor = function (field) {
    if (errorsMap && errorsMap[field]) {
      return errorsMap[field];
    }
    const match = errorsList.find(function (err) { return err.field === field; });
    return match ? match.message : '';
  };
%>

<section class="admin users">
  <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-4">
    <div>
      <h1 class="h3 mb-1">Benutzer bearbeiten</h1>
      <p class="text-muted mb-0"><%= values.email || '' %></p>
    </div>
    <div class="d-flex gap-2">
      <a href="/admin/users/<%= user.id %>" class="btn btn-outline-secondary">Zur체ck</a>
    </div>
  </div>

  <form method="post" action="/admin/users/<%= user.id %>" class="card shadow-sm">
    <input type="hidden" name="csrfToken" value="<%= csrfToken || '' %>">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <label for="firstName" class="form-label">Vorname</label>
          <input type="text" class="form-control <%= errorFor('firstName') ? 'is-invalid' : '' %>" id="firstName" name="firstName" value="<%= values.firstName || '' %>">
          <% if (errorFor('firstName')) { %><div class="invalid-feedback"><%= errorFor('firstName') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="lastName" class="form-label">Nachname</label>
          <input type="text" class="form-control <%= errorFor('lastName') ? 'is-invalid' : '' %>" id="lastName" name="lastName" value="<%= values.lastName || '' %>">
          <% if (errorFor('lastName')) { %><div class="invalid-feedback"><%= errorFor('lastName') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="username" class="form-label">Benutzername</label>
          <input type="text" class="form-control <%= errorFor('username') ? 'is-invalid' : '' %>" id="username" name="username" value="<%= values.username || '' %>">
          <% if (errorFor('username')) { %><div class="invalid-feedback"><%= errorFor('username') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="email" class="form-label">E-Mail</label>
          <input type="email" class="form-control <%= errorFor('email') ? 'is-invalid' : '' %>" id="email" name="email" value="<%= values.email || '' %>">
          <% if (errorFor('email')) { %><div class="invalid-feedback"><%= errorFor('email') %></div><% } %>
        </div>
        <div class="col-md-6">
          <label for="password" class="form-label">Neues Passwort</label>
          <input type="password" class="form-control <%= errorFor('password') ? 'is-invalid' : '' %>" id="password" name="password" value="">
          <% if (errorFor('password')) { %><div class="invalid-feedback"><%= errorFor('password') %></div><% } %>
          <div class="form-text">Leer lassen, wenn das Passwort unver채ndert bleiben soll.</div>
        </div>
        <div class="col-md-6">
          <label for="isActive" class="form-label">Status</label>
          <select id="isActive" name="isActive" class="form-select">
            <option value="true" <%= values.isActive ? 'selected' : '' %>>Aktiv</option>
            <option value="false" <%= values.isActive === false ? 'selected' : '' %>>Gesperrt</option>
          </select>
        </div>
      </div>

      <hr class="my-4">

      <div>
        <h2 class="h5">Globale Rollen</h2>
        <% if (errorFor('roleIds')) { %>
          <div class="alert alert-danger"><%= errorFor('roleIds') %></div>
        <% } %>
        <% if (globalRoles.length) { %>
          <div class="row g-2">
            <% globalRoles.forEach(function(role) { %>
              <div class="col-12 col-md-6 col-lg-4">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="roleIds" id="role_<%= role.id %>" value="<%= role.id %>" <%= assignedRoleIds.has(role.id) ? 'checked' : '' %>>
                  <label class="form-check-label" for="role_<%= role.id %>"><%= role.name %></label>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <p class="text-muted">Keine globalen Rollen verf체gbar.</p>
        <% } %>
      </div>

      <div class="mt-4">
        <h2 class="h5">Ausleihe-Rollen</h2>
        <% if (locationOptions.length) { %>
          <div class="row g-3">
            <% locationOptions.forEach(function(loc) { %>
              <div class="col-12 col-lg-6">
                <label class="form-label"><%= loc.name %></label>
                <select class="form-select" name="locationRole_<%= loc.id %>">
                  <option value="">Keine Rolle</option>
                  <% locationRoles.forEach(function(role) { %>
                    <option value="<%= role.id %>" <%= (assignedRoleLocations.get(loc.id) === role.id) ? 'selected' : '' %>><%= role.name %></option>
                  <% }) %>
                </select>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <p class="text-muted">Keine Ausleihen verf체gbar.</p>
        <% } %>
      </div>
    </div>

    <div class="card-footer d-flex flex-wrap gap-2 justify-content-end">
      <button type="submit" class="btn btn-primary">Speichern</button>
      <a href="/admin/users/<%= user.id %>" class="btn btn-outline-secondary">Abbrechen</a>
    </div>
  </form>
</section>
