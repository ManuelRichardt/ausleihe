<% pageTitle = 'Mail-Template bearbeiten' %>
<%
  const tpl = (typeof template !== 'undefined' && template) ? template : {};
%>

<section class="system mail-template-edit">
  <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-4">
    <div>
      <h1 class="h3 mb-2">Mail-Template bearbeiten</h1>
      <p class="text-muted mb-0"><code><%= tpl.key || '-' %></code></p>
    </div>
    <a href="/system/mail" class="btn btn-outline-secondary">Zurück</a>
  </div>

  <form method="post" action="/system/mail/templates/<%= tpl.id %>" class="card shadow-sm">
    <input type="hidden" name="csrfToken" value="<%= csrfToken || '' %>">
    <div class="card-body">
      <div class="alert alert-light border mb-3" role="note">
        <div class="small fw-semibold mb-1">Verfügbare Platzhalter</div>
        <div class="small">
          <code>{{firstName}}</code>, <code>{{lastName}}</code>, <code>{{loanId}}</code>,
          <code>{{lendingLocation}}</code>, <code>{{reservedFrom}}</code>, <code>{{reservedUntil}}</code>,
          <code>{{assets}}</code>, <code>{{assetNames}}</code>, <code>{{assetCount}}</code>, <code>{{assetDistinctCount}}</code>
        </div>
      </div>
      <div class="row g-3">
        <div class="col-md-4">
          <label class="form-label" for="key">Key</label>
          <input type="text" id="key" name="key" class="form-control" value="<%= tpl.key || '' %>" required>
        </div>
        <div class="col-md-4">
          <label class="form-label" for="subjectDe">Betreff (DE)</label>
          <input type="text" id="subjectDe" name="subjectDe" class="form-control" value="<%= tpl.subjectDe || '' %>" required>
        </div>
        <div class="col-md-4">
          <label class="form-label" for="subjectEn">Subject (EN)</label>
          <input type="text" id="subjectEn" name="subjectEn" class="form-control" value="<%= tpl.subjectEn || '' %>" required>
        </div>
        <div class="col-md-6">
          <label class="form-label" for="bodyDe">Inhalt (DE)</label>
          <textarea id="bodyDe" name="bodyDe" rows="12" class="form-control" required><%= tpl.bodyDe || '' %></textarea>
        </div>
        <div class="col-md-6">
          <label class="form-label" for="bodyEn">Body (EN)</label>
          <textarea id="bodyEn" name="bodyEn" rows="12" class="form-control" required><%= tpl.bodyEn || '' %></textarea>
        </div>
        <div class="col-12">
          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="isActive" name="isActive" <%= tpl.isActive ? 'checked' : '' %>>
            <label class="form-check-label" for="isActive">Template aktiv</label>
          </div>
        </div>
      </div>
    </div>
    <div class="card-footer d-flex justify-content-end gap-2">
      <button type="submit" class="btn btn-primary">Speichern</button>
      <a href="/system/mail" class="btn btn-outline-secondary">Abbrechen</a>
    </div>
  </form>
</section>
