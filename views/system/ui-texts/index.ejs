<% pageTitle = 'UI Texte' %>
<%
  const query = (typeof filters !== 'undefined' && filters) ? filters : {};
  const currentPage = (pagination && pagination.page) ? pagination.page : 1;
  const sortBy = query.sortBy || '';
  const sortOrder = query.sortOrder || 'ASC';
  const buildQuery = function (overrides) {
    const params = Object.assign({}, query, overrides || {});
    const parts = [];
    Object.keys(params).forEach(function (key) {
      const value = params[key];
      if (typeof value !== 'undefined' && value !== null && value !== '') {
        parts.push(encodeURIComponent(key) + '=' + encodeURIComponent(String(value)));
      }
    });
    return parts.length ? ('?' + parts.join('&')) : '';
  };
  const sortLink = function (field) {
    const nextOrder = (sortBy === field && sortOrder === 'ASC') ? 'DESC' : 'ASC';
    return buildQuery({ sortBy: field, sortOrder: nextOrder, page: 1 });
  };
%>

<section class="system ui-texts">
  <div class="d-flex flex-column flex-lg-row align-items-lg-end justify-content-between gap-3 mb-4">
    <div>
      <h1 class="h3 mb-2">UI Texte</h1>
      <p class="text-muted mb-0">Texte für DE/EN Oberfläche verwalten.</p>
    </div>
    <form method="post" action="/system/ui-texts/sync" class="d-flex">
      <input type="hidden" name="csrfToken" value="<%= csrfToken || '' %>">
      <button type="submit" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-repeat me-1"></i> Keys aus Views synchronisieren
      </button>
    </form>
  </div>

  <form method="get" action="/system/ui-texts" class="row g-2 align-items-end mb-4 panel">
    <div class="col-12 col-md-8">
      <label for="q" class="form-label">Suche</label>
      <input type="text" class="form-control" id="q" name="q" value="<%= query.q || '' %>" placeholder="Key oder Text">
    </div>
    <div class="col-12 col-md-4 d-flex gap-2">
      <button type="submit" class="btn btn-outline-primary w-100">
        <i class="bi bi-search me-1"></i> Suchen
      </button>
    </div>
  </form>

  <div class="card shadow-sm mb-4">
    <div class="card-header">
      <h2 class="h6 mb-0">Neuer Textbaustein</h2>
    </div>
    <div class="card-body">
      <form method="post" action="/system/ui-texts" class="row g-3">
        <input type="hidden" name="csrfToken" value="<%= csrfToken || '' %>">
        <div class="col-md-3">
          <label class="form-label" for="newKey">Key</label>
          <input class="form-control" id="newKey" name="key" placeholder="nav.assets" required>
        </div>
        <div class="col-md-4">
          <label class="form-label" for="newDe">Deutsch</label>
          <input class="form-control" id="newDe" name="de">
        </div>
        <div class="col-md-4">
          <label class="form-label" for="newEn">English</label>
          <input class="form-control" id="newEn" name="en">
        </div>
        <div class="col-md-1 d-grid">
          <button type="submit" class="btn btn-primary mt-md-4">Anlegen</button>
        </div>
      </form>
    </div>
  </div>

  <div class="table-responsive panel">
    <table class="table table-hover align-middle">
      <thead>
        <tr>
          <th><a class="text-decoration-none" href="<%= sortLink('key') %>">Key</a></th>
          <th>Deutsch</th>
          <th>English</th>
          <th><a class="text-decoration-none" href="<%= sortLink('isActive') %>">Aktiv</a></th>
          <th class="actions-col">Aktionen</th>
        </tr>
      </thead>
      <tbody>
        <% if (Array.isArray(entries) && entries.length) { %>
          <% entries.forEach(function(entry) { %>
            <tr>
              <td><code><%= entry.key %></code></td>
              <td><%= entry.de || '-' %></td>
              <td><%= entry.en || '-' %></td>
              <td>
                <% if (entry.isActive) { %>
                  <span class="badge text-bg-success">Aktiv</span>
                <% } else { %>
                  <span class="badge text-bg-secondary">Inaktiv</span>
                <% } %>
              </td>
              <td class="actions-cell">
                <a href="/system/ui-texts/<%= entry.id %>/edit" class="text-decoration-none" aria-label="Bearbeiten">
                  <i class="bi bi-pencil-fill"></i>
                </a>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-center text-muted py-4">Keine Texte vorhanden.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2 mt-3">
    <nav aria-label="Pagination">
      <ul class="pagination mb-0">
        <li class="page-item <%= currentPage <= 1 ? 'disabled' : '' %>">
          <a class="page-link" href="<%= buildQuery({ page: currentPage - 1 }) %>"><i class="bi bi-caret-left-fill"></i></a>
        </li>
        <li class="page-item active">
          <span class="page-link"><%= currentPage %></span>
        </li>
        <li class="page-item <%= pagination && pagination.hasNext ? '' : 'disabled' %>">
          <a class="page-link" href="<%= buildQuery({ page: currentPage + 1 }) %>"><i class="bi bi-caret-right-fill"></i></a>
        </li>
      </ul>
    </nav>
  </div>
</section>
