<% pageTitle = 'Audit Log' %>
<%
  const query = (typeof filters !== 'undefined' && filters) ? filters : {};
  const logsList = Array.isArray(logs) ? logs : [];
  const actions = Array.isArray(actionOptions) ? actionOptions : [];
  const entities = Array.isArray(entityOptions) ? entityOptions : [];
  const currentPage = (pagination && pagination.page) ? pagination.page : 1;
  const totalItems = (pagination && pagination.total) ? pagination.total : logsList.length;
  const buildQuery = function (overrides) {
    const params = Object.assign({}, query, overrides || {});
    const parts = [];
    Object.keys(params).forEach(function (key) {
      const value = params[key];
      if (typeof value !== 'undefined' && value !== null && value !== '') {
        parts.push(encodeURIComponent(key) + '=' + encodeURIComponent(String(value)));
      }
    });
    return parts.length ? ('?' + parts.join('&')) : '';
  };
  const renderMetadata = function (value) {
    if (value === null || typeof value === 'undefined' || value === '') {
      return '-';
    }
    if (typeof value === 'string') {
      try {
        return JSON.stringify(JSON.parse(value), null, 2);
      } catch (err) {
        return value;
      }
    }
    try {
      return JSON.stringify(value, null, 2);
    } catch (err) {
      return String(value);
    }
  };
%>

<section class="system audit-log">
  <div class="d-flex flex-column flex-lg-row align-items-lg-end justify-content-between gap-3 mb-4">
    <div>
      <h1 class="h3 mb-2">Audit Log</h1>
    </div>
  </div>

  <form method="get" action="/system/audit-log" class="row g-2 align-items-end mb-4 panel">
    <div class="col-12 col-md-3">
      <label for="action" class="form-label">Aktion</label>
      <select id="action" name="action" class="form-select">
        <option value="">Alle</option>
        <% actions.forEach(function (action) { %>
          <option value="<%= action %>" <%= query.action === action ? 'selected' : '' %>><%= action %></option>
        <% }) %>
      </select>
    </div>
    <div class="col-12 col-md-3">
      <label for="entity" class="form-label">Entity</label>
      <select id="entity" name="entity" class="form-select">
        <option value="">Alle</option>
        <% entities.forEach(function (entity) { %>
          <option value="<%= entity %>" <%= query.entity === entity ? 'selected' : '' %>><%= entity %></option>
        <% }) %>
      </select>
    </div>
    <div class="col-12 col-md-2">
      <label for="dateFrom" class="form-label">Von</label>
      <input id="dateFrom" name="dateFrom" type="date" class="form-control" value="<%= query.dateFrom || '' %>">
    </div>
    <div class="col-12 col-md-2">
      <label for="dateTo" class="form-label">Bis</label>
      <input id="dateTo" name="dateTo" type="date" class="form-control" value="<%= query.dateTo || '' %>">
    </div>
    <div class="col-12 col-md-2 d-flex gap-2">
      <button type="submit" class="btn btn-outline-primary w-100">
        <i class="bi bi-search me-1"></i> Filtern
      </button>
    </div>
  </form>

  <div class="panel">
    <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2 mb-3">
      <div class="d-flex align-items-center gap-2">
        <nav aria-label="Pagination">
          <ul class="pagination mb-0">
            <li class="page-item <%= currentPage <= 1 ? 'disabled' : '' %>">
              <a class="page-link" href="<%= buildQuery({ page: currentPage - 1 }) %>"><i class="bi bi-caret-left-fill"></i></a>
            </li>
            <li class="page-item active"><span class="page-link"><%= currentPage %></span></li>
            <li class="page-item <%= pagination && pagination.hasNext ? '' : 'disabled' %>">
              <a class="page-link" href="<%= buildQuery({ page: currentPage + 1 }) %>"><i class="bi bi-caret-right-fill"></i></a>
            </li>
          </ul>
        </nav>
      </div>
      <div class="text-muted small">Gesamt: <%= totalItems %></div>
    </div>

    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead>
          <tr>
            <th>Zeit</th>
            <th>Benutzer</th>
            <th>Aktion</th>
            <th>Entity</th>
            <th>Metadata</th>
          </tr>
        </thead>
        <tbody>
          <% if (logsList.length) { %>
            <% logsList.forEach(function (log) { %>
              <tr>
                <td><%= log.createdAt ? new Date(log.createdAt).toLocaleString('de-DE') : '-' %></td>
                <td>
                  <% if (log.user) { %>
                    <%= [log.user.firstName, log.user.lastName].filter(Boolean).join(' ') || log.user.username || log.user.email || '-' %>
                  <% } else { %>
                    <%= log.userId || '-' %>
                  <% } %>
                </td>
                <td><%= log.action || '-' %></td>
                <td><%= log.entity || '-' %> <span class="text-muted small"><%= log.entityId || '' %></span></td>
                <td>
                  <details>
                    <summary class="small text-muted">anzeigen</summary>
                    <pre class="mb-0 mt-2 small"><%= renderMetadata(log.metadata) %></pre>
                  </details>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="5" class="text-center text-muted py-4">Keine Aktivit√§ten vorhanden.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</section>
